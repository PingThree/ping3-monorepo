{
  "name": "prime-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:packages": "turbo build --filter \"@repo/*\"",
    "start": "turbo start",
    "dev": "turbo dev",
    "dev:curator2": "turbo dev --parallel --filter=curator-v2-app --filter=vault-indexer --filter=@repo/ui --filter=@repo/web3 --filter=@repo/utils --filter=@repo/abis",
    "lint": "turbo lint",
    "test:unit": "turbo test:unit --ui=stream --log-order=stream --",
    "typecheck": "turbo typecheck",
    "format": "prettier --write '**/*.*(md|json|yaml|ts|js|tsx)' --loglevel warn",
    "gen:graphql": "turbo gen:graphql",
    "gen:rewards-api": "turbo gen:rewards-api",
    "prepare": "husky",
    "setup:env": "node setup-env.js"
  },
  "devDependencies": {
    "husky": "^9.1.5",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.1",
    "turbo": "^2.5.4",
    "typescript": "5.5.4",
    "wait-on": "^8.0.3"
  },
  "packageManager": "pnpm@10.7.0",
  "engines": {
    "node": ">=20"
  }
}
