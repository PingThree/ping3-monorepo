{
  "$schema": "https://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "declaration": true,
    "declarationMap": true,
    "composite": true,

    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,

    "incremental": true
  }
}
