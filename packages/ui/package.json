{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./theme": "./dist/index.css"
  },
  "scripts": {
    "build": "npx @tailwindcss/cli -i ./src/theme.css -o ./dist/index.css && tsc",
    "dev": "concurrently \"tailwindcss -i ./src/theme.css -o ./dist/index.css --watch\" \"tsc --watch\"",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "test:unit": "vitest run",
    "typecheck": "tsc --project tsconfig.json --noEmit --incremental"
  },
  "peerDependencies": {
    "react": ">=19.1.0",
    "react-dom": ">=19.1.0"
  },
  "dependencies": {
    "next-themes": "^0.4.6"
  },
  "devDependencies": {
    "@dicebear/collection": "^9.2.1",
    "@dicebear/core": "^9.2.1",
    "@radix-ui/react-avatar": "^1.1.9",
    "@radix-ui/react-dropdown-menu": "^2.1.14",
    "@radix-ui/react-navigation-menu": "^1.2.12",
    "@radix-ui/react-slot": "^1.2.2",
    "@radix-ui/react-toggle": "^1.1.9",
    "@radix-ui/react-toggle-group": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.13",
    "@radix-ui/react-separator": "^1.1.6",
    "@radix-ui/react-tooltip": "^1.2.6",
    "@react-stately/utils": "^3.10.5",
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/utils": "workspace:*",
    "@tailwindcss/cli": "^4.1.5",
    "@tailwindcss/postcss": "^4.1.8",
    "@tanstack/react-table": "^8.19.3",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "19.1.4",
    "@types/react-dom": "19.1.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.2",
    "eslint": "^9.28.0",
    "framer-motion": "^12.4.2",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.460.0",
    "postcss": "^8.5.4",
    "react-icons": "^5.5.0",
    "react-use-measure": "^2.1.1",
    "tailwind-merge": "^2.6.0",
    "tailwind-variants": "^0.3.1",
    "tailwindcss": "^4.1.8",
    "usehooks-ts": "^2.16.0",
    "vitest": "^3.1.2"
  }
}
